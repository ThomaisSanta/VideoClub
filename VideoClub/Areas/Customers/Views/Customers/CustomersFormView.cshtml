@model VideoClub.Areas.MovieRents.Data.MovieRentInUsersBindingModel

@{
    ViewBag.Title = "NewBookingForm";
}

<h2>Book a movie for @Model.UserNameForm</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.UserNameForm)
    <div class="form-group">
        @Html.LabelFor(model => model.MovieIDForm, "Select a Movie", new { @class = "control-label" })
        @Html.DropDownListFor(model => model.MovieIDForm, Model.Booking, "Select a Movie", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.CommentForm, "Enter comment for booking", new { @class = "control-label" })
        @Html.TextAreaFor(model => model.CommentForm, new { @class = "form-control" })
    </div>
    <input type="submit" value="Submit" class="btn btn-primary" />
}


